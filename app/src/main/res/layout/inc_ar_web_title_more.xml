<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout 
        android:id="@+id/ll_web_title_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_alignRight="@id/rl_web_title"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/tv_web_title_more_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:gravity="left|center_vertical"
            android:text="@string/webview_refresh" />
        <View style="@style/set_divide_row2" />
        <TextView 
            android:id="@+id/tv_web_title_more_browser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:gravity="left|center_vertical"
            android:text="@string/webview_open_with_browser" />
    </LinearLayout>


</RelativeLayout>